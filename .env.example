# ===================================
# Agent Framework v2.0.0 Configuration
# ===================================

# === API Keys ===
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash-latest

# External API Keys (Optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key
DALLE_API_KEY=your_dalle_api_key
UNSPLASH_API_KEY=your_unsplash_api_key

# === Server Configuration ===
HOST=0.0.0.0
PORT=8000
DEBUG=true

# === Memory Configuration ===
VECTOR_STORE_DIM=768
MAX_CONTEXT_LENGTH=8000

# === MCP Server ===
MCP_SERVER_NAME=agent-ia-mcp
MCP_VERSION=1.0.0

# === RRLA Configuration ===
MAX_REASONING_STEPS=5
CONFIDENCE_THRESHOLD=0.7

# === Agent Enablement ===
LEAD_GEN_ENABLED=true
LEAD_GEN_MAX_RESULTS=50
SOCIAL_MEDIA_ENABLED=true
WORDPRESS_ENABLED=true
WORDPRESS_URL=https://your-wordpress-site.com

# === Content & SEO ===
DEFAULT_TONE=professional
TARGET_WORD_COUNT=1800
ENABLE_YOAST=true
MIN_SEO_SCORE=70

# === Media Configuration ===
USE_DALLE=true
IMAGES_PER_ARTICLE=4
OPTIMIZE_IMAGES=true

# === Batch Processing ===
BATCH_MAX_CONCURRENT=3
BATCH_RETRY_ON_FAILURE=true

# === Output Directories ===
OUTPUT_DIR_LEADS=./output_leads
OUTPUT_DIR_SOCIAL=./output_social_media
OUTPUT_DIR_BLOG=./output_blog_articles
